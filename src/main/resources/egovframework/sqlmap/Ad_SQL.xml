<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="ad_space" >

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="adVO" type="egov.service1.AdVO"/>
	
	<insert id = "adDAO.insertAd">
			   INSERT INTO ad( adindex,
							email,
							name,
							userid,
							phone,	
							service,
							ment,
							rdate,
							status	
							       )  
					VALUES  ( ad_seq.nextval,
								'$email$',
								'$name$',
								'$userid$',
								'$phone$',
								'$service$',
								'$ment$',
								sysdate	,	
								'P'			
								)
			   <!--  INSERT INTO ad( adindex,
							email,
							name,
							userid,
							phone,	
							service,
							ment
								
							       )  
					VALUES  ( ad_seq.nextval,
								'$email$',
								'$name$',
								'$userid$',
								'$phonef$',
								'$service$',
								'$ment$'
													
								)-->
			
	
	</insert>

	<select id="adDAO.selectadService" resultClass = "egovMap">
		SELECT b.* FROM (
			SELECT rownum rn, a.* from (	
				SELECT  ADINDEX
						USERID
						SERVICE
						MENT
						SDATE
						EDATE
						RDATE
						BANNER
						STATUS
						EMAIL
						PHONE
						NAME
				FROM	
						AD
				WHERE	
						ADINDEX IS NOT NULL
				ORDER BY RDATE DESC) a )b
	</select>





</sqlMap>